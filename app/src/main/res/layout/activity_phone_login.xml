<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">


    <EditText
        android:textStyle="bold"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:hint="Write phone number here..."
        android:padding="10dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentStart="true"
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:visibility="invisible"
        android:layout_below="@+id/phone_number_input"
        android:textStyle="bold"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:hint="Write verification code here..."
        android:padding="10dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentStart="true"
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@id/verification_code_input"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textColor="#fcf9f9"
        android:background="@drawable/buttons"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:textAllCaps="false"
        android:text="Send Verification Code"
        android:id="@+id/send_var_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button
        android:layout_below="@id/send_var_code_button"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textColor="#fcf9f9"
        android:background="@drawable/buttons"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:textAllCaps="false"
        android:text="Verify"
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</RelativeLayout>